---
interface Props{
    name: string;
    subTitle: string;
    body: string;
    cert?:string;
}

const {
    name = "Alan Vidal",
    subTitle = "Subtitle",
    body = "Body",
} = Astro.props;
---

<!--Half Card w/img below-->
<div class="my-5 pxr-5 flex h-[50vh] md:h-[80vh] bg-white rounded-xl shadow-lg overflow-hidden flex-col">
    <div class="flex flex-col h-full justify-center md:text-center" >
        <!-- Text -->
        <div> <!-- Main Text -->
            <h1 class="my-1 mx-20 font-bold text-4xl">
                {name}
            </h1>
            <h2 class="my-1 mx-20 font-bold text-2xl">
                {subTitle}
            </h2>
            <p class="my-3 mx-20 font-thin">
                {body}
            </p>
        </div>
        
    </div>
</div>
    