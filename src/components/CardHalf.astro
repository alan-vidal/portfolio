---
interface Props{
    title: string;
    subTitle: string;
    body: string;
    image: string;
}

const {
    title = "Title",
    subTitle = "Subtitle",
    body = "Body",
    image = "public/landScape.png",
} = Astro.props;
---

<!--Half Card w/img below-->
<div class="my-5 pxr-5 flex h-[50vh] md:h-[80vh] flex-col">
    <h1 class="my-5 mx-20 font-bold text-5xl py-1 text-black">
        {title}
    </h1>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden flex h-full flex-col" >
        <!-- Text -->
        <h2 class="my-5 mx-20 font-bold text-2xl">
            {subTitle}
        </h2>
        <p class="mx-20 font-thin py-2">
            {body}
        </p>
        <!-- img background -->
        <img src={image} alt="Alan" class="h-full object-cover justify-end align-baseline">
    </div>
</div>
    